<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalendarActivity"
    android:background="@color/bg">


    <RelativeLayout
        android:id="@+id/black_relative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black">
    </RelativeLayout>

    <TextView
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:text="@string/calendar"
        android:gravity="center_vertical"
        android:textSize="25dp"
        android:fontFamily="@font/aleo_semibold"
        android:textColor="@color/black"
        android:layout_below="@id/black_relative"
        android:layout_margin="10dp"/>



    <RelativeLayout
        android:id="@+id/LineBtn"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        >

        <FrameLayout
            android:id="@+id/SearchBtn"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:onClick="goSearch">

            <ImageView
                android:id="@id/SearchBtn"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#000000"
                android:contentDescription="@string/search"
                app:srcCompat="@drawable/search1"
                tools:ignore="TouchTargetSizeCheck"
                >

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:fontFamily="@font/aleo_semibold"
                android:gravity="center"
                android:text="@string/search"
                android:textColor="@color/black"
                >

            </TextView>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/ObjectBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="10dp"
            android:minHeight="48dp"
            android:onClick="OnPassFlat">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:drawableTop="@drawable/facilities_house"
                android:fontFamily="@font/aleo_semibold"
                android:gravity="center"
                android:text="@string/object"
                android:textColor="@color/black" />


        </FrameLayout>

        <FrameLayout
            android:id="@+id/CalendarBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="170dp"
            android:layout_marginTop="10dp"
            android:minHeight="48dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:drawableTop="@drawable/calendar"
                android:fontFamily="@font/aleo_semibold"
                android:gravity="center"
                android:text="@string/calendar"
                android:textColor="@color/black" />


        </FrameLayout>




        <FrameLayout
            android:id="@+id/ProfileBtn"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginStart="330dp"
            android:layout_marginTop="10dp"
            android:onClick="OnProfile">

            <ImageView
                android:id="@+id/profile"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="5dp"
                android:contentDescription="@string/profile"
                app:srcCompat="@drawable/profile1"
                tools:ignore="TouchTargetSizeCheck"
                android:layout_gravity="center_horizontal"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:fontFamily="@font/aleo_semibold"
                android:gravity="center"
                android:text="@string/profile"
                android:textColor="@color/black" />


        </FrameLayout>


    </RelativeLayout>



</RelativeLayout>