<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.PasswordSecurityActivity"
    android:background="@color/bg">

    <RelativeLayout
        android:id="@+id/black_relative"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/black">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/grey_relative_password_security"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/bg12"
        android:layout_below="@+id/black_relative">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/password_security"
            android:gravity="center"
            android:textSize="25dp"
            android:fontFamily="@font/aleo_semibold"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/password_relative"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_below="@+id/grey_relative_password_security"
        android:background="@color/bg12"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/text_entrance_security"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/entrance_security"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:fontFamily="@font/aleo_semibold"
            android:textColor="@color/black"
            android:layout_margin="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_relative"
        android:background="@color/bg"
        android:layout_marginTop="20dp">


        <TextView
            android:id="@+id/text_security_notifications"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="@string/security_notifications"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:fontFamily="@font/aleo_semibold"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/text_data_changed"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@+id/text_security_notifications"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/aleo_semibold"
            android:gravity="center_vertical"
            android:text="@string/data_changed"


            android:textSize="15dp"
            tools:ignore="TextSizeCheck" />

        <FrameLayout
            android:id="@+id/telegram_frameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/text_data_changed">

            <Switch
                android:id="@+id/switch_telegram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                tools:ignore="TouchTargetSizeCheck" />
        <TextView
            android:id="@+id/telegram_text"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:text="@string/telegram"
            android:textColor="@color/black"
            android:fontFamily="@font/aleo_semibold"
            android:layout_marginStart="5dp"
            android:textSize="20dp"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/email_frameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/telegram_frameLayout">

            <Switch
                android:id="@+id/switch_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                tools:ignore="TouchTargetSizeCheck" />
            <TextView
                android:id="@+id/email_text"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/email"
                android:textColor="@color/black"
                android:fontFamily="@font/aleo_semibold"
                android:layout_marginStart="5dp"
                android:textSize="20dp"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/sms_frameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/email_frameLayout">

            <Switch
                android:id="@+id/switch_sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                tools:ignore="TouchTargetSizeCheck" />
            <TextView
                android:id="@+id/email_sms"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/sms"
                android:textColor="@color/black"
                android:fontFamily="@font/aleo_semibold"
                android:layout_marginStart="5dp"
                android:textSize="20dp"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/push_frameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/sms_frameLayout">

            <Switch
                android:id="@+id/switch_push"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                tools:ignore="TouchTargetSizeCheck" />
            <TextView
                android:id="@+id/email_push"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/push"
                android:textColor="@color/black"
                android:fontFamily="@font/aleo_semibold"
                android:layout_marginStart="5dp"
                android:textSize="20dp"/>
        </FrameLayout>

    </RelativeLayout>
</RelativeLayout>