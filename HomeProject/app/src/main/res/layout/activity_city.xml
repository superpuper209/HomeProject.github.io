<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.City">

<RelativeLayout
    android:id="@+id/curtain2"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/bg"
    tools:ignore="ExtraText">

    <TextView
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="150dp"
        android:layout_marginStart="173dp"
        android:layout_marginEnd="169dp"
        android:fontFamily="@font/aleo_semibold"
        android:text="@string/nadpis"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:gravity="center"/>

    <ImageButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="35dp"
        android:contentDescription="@string/back"
        android:onClick="OnBack"
        android:clickable="true"
        android:scrollbarSize="20dp"
        app:srcCompat="@drawable/qwe"
        tools:ignore="TouchTargetSizeCheck"
        android:background="@color/bg"/>


</RelativeLayout>

<RelativeLayout
    android:id="@+id/curtain3"
    android:layout_width="match_parent"
    android:layout_height="5dp"
    android:background="@color/black"
    android:layout_below="@id/curtain2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/curtain3"
        android:background="@color/bg" />




    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".User.MainActivity"
        android:layout_below="@+id/curtain2">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="Search for items..."
            android:background="@color/white"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/text_for_view"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:text="@string/text_for_view"
            android:textColor="@color/bg12"
            android:fontFamily="@font/aleo_semibold"
            android:layout_marginStart="10dp"/>

        <ListView

            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>






</RelativeLayout>